# API Keys
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./data/app.db

# Application Settings
APP_NAME=StudyMate AI
DEBUG=True
SECRET_KEY=your_secret_key_for_jwt_tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Storage Settings
STORAGE_TYPE=local

# LLM Settings
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-large

# OAuth Settings - Social Login (Google, GitHub, Facebook)
# To enable social login, uncomment and fill in your OAuth credentials:

# Google OAuth (Get from: https://console.cloud.google.com/)
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth (Get from: https://github.com/settings/developers)
# GITHUB_CLIENT_ID=your_github_client_id_here
# GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Facebook OAuth (Get from: https://developers.facebook.com/)
# FACEBOOK_CLIENT_ID=your_facebook_client_id_here
# FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here

# OAuth Redirect URI (adjust for your deployment)
OAUTH_REDIRECT_URI=http://localhost:8501/oauth/callback
